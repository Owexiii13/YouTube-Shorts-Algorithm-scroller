{
  "manifest_version": 3,
  "name": "YouTube Shorts AI Personalizer",
  "version": "1.0.0",
  "description": "AI-powered personalization for YouTube Shorts with mood system",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
